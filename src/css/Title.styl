@require "./base.styl"

$-melon-title = {
    margin: 0.5em 0 0.4em
    line-height: 110%
}

$-melon-title-levels = {

    '1': $-melon-xxxx-large-font-size,
    '2': $-melon-xx-large-font-size,
    '3': $-melon-x-large-font-size,
    '4': $-melon-medium-font-size,
    '5': $-melon-x-small-font-size,
    '6': $-melon-xx-small-font-size

}

.{$-melon-class-prefix}-title
    {$-melon-title}

for level, value in $-melon-title-levels
    h{level}.{$-melon-class-prefix}-title
        font-size: value
