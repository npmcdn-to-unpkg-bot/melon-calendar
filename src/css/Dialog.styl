@require "./base.styl"
@require "nib"

.{$-melon-class-prefix}-dialog

    position: fixed
    box-sizing: border-box
    -webkit-tap-highlight-color: $-melon-colors.transparent
    z-index: $-melon-z-index.dialog
    top: 0
    left: 0
    width: 100%
    height: 100%
    overflow: auto
    opacity: 0
    visibility: hidden
    transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

    &.state-open

        opacity: 1
        visibility: visible

    &-window

        box-sizing: border-box
        -webkit-tap-highlight-color: $-melon-colors.transparent
        position: absolute
        width: 75%
        max-width: 768px
        top: 50%
        left: 50%
        z-index: $-melon-z-index.dialog
        background-color: $-melon-colors.white
        box-shadow: 0 14px 45px rgba(0, 0, 0, 0.25), 0 10px 18px rgba(0, 0, 0, 0.22)
        border-radius: 2px
        padding: 1em
        margin-bottom: 16px

    .variant-adaptive
        width: auto
        display: inline-block

    &-title

        font-size: $-melon-xx-large-font-size
        line-height: 2

    &-body

        padding: 0.6em 0

    &-actions

        margin-top: 2em
        text-align: right
        padding: 0 1em
