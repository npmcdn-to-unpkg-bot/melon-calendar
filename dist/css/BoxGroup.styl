@require './base.styl'
@require './Ripple.styl'
@require './Icon.styl'

.{$-melon-class-prefix}-box-group

    position: relative
    display: inline-block
    width: $-melon-boxgroup.width

    &-option
        display: block
        line-height: 2em
        color: $-melon-boxgroup-option.color
        cursor: pointer
        position: relative

        > input
            display: none

        > .{$-melon-class-prefix}-icon
            margin-right: 0.5em
            font-size: $-melon-boxgroup-option-icon.font-size
            color: $-melon-boxgroup-option-icon.color
            vertical-align: middle
            transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
            position: relative
            z-index: 1

        .{$-melon-class-prefix}-center-ripple-circle
            height: 18px
            width: 18px
            top: 50%
            margin-top: -9px
            left: -1px

        > span
            vertical-align: middle

        &.state-checked

            > .{$-melon-class-prefix}-icon
                color: $-melon-boxgroup-option-icon-checked.color

        &.state-disabled
            color: $-melon-boxgroup-option-icon-disabled.color
            cursor: not-allowed

    &.state-invalid &-option .ui-icon
        color: $-melon-boxgroup-option-icon-invalid.color

    &.variant-horizontal
        display: inline-block
        margin-left: -1em
        width: auto

        .{$-melon-class-prefix}-box-group-option
            display: inline-block
            margin-left: 1em

            > .{$-melon-class-prefix}-icon
                margin-right: .5em

        .{$-melon-class-prefix}-validity
            margin-left: 1.5em

