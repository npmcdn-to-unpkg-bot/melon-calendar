$-melon-boxgroup = {
    width: 100%
};

$-melon-boxgroup-option = {
    color: rgba($-melon-colors.black, .54)
};

$-melon-boxgroup-option-icon = {
    font-size: $-melon-large-font-size,
    color: $-melon-boxgroup-option.color
};

$-melon-boxgroup-option-icon-checked = {
    color: $-melon-colors.teal500
};

$-melon-boxgroup-option-icon-disabled = {
    color: rgba($-melon-colors.black, .26)
};

$-melon-boxgroup-option-icon-invalid = {
    color: $-melon-colors.red500
};

